<% @ports.each do |port| %>
<VirtualHost *:<%= port %>>
    <% if @server_alias != '' %>
    Alias <%= @server_alias %> "<%= @server_document_root %>"
    <% end %>
    DocumentRoot "<%= @server_document_root %>/<%= @site_name %><%= @web_folder %>"
    DirectoryIndex <%= @directory_index %>
    ServerName <%= @server_name %>
    <Directory "<%= @server_document_root %>/<%= @site_name %><%= @web_folder %>">
        AllowOverride All
        Allow from All
    </Directory>
</VirtualHost>
<% end %>
